{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableMajorUpdates",
    ":rebaseStalePrs"
  ],
  "enabledManagers": ["npm"],
    "packageRules": [ 
    {
      "matchUpdateTypes": ["patch"],
      "labels": ["Patch"],
      "automerge": false
    },
    {      
      "matchUpdateTypes": ["minor"],
      "labels": ["Minor update"],
      "automerge": false
    }
  ],
   "prConcurrentLimit": 0,
   "prHourlyLimit": 0,
   "dependencyDashboardAutoclose": false,
   "dependencyDashboard": true
}
