{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableMajorUpdates"
  ],
    "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": false,
      "enabled": false,
      "matchUpdateTypes": ["major"],
      "labels": ["Major update"],
      "matchUpdateTypes": ["minor"], "labels": ["Minor update"],
      "matchUpdateTypes": ["patch", "digest", "bump"], "labels": ["Patch"],
      "languages": ["js"], "labels": ["Lang JS"]
    }
  ],
   "prConcurrentLimit": 0,
   "prHourlyLimit": 0,
   "rollbackPrs": true,
   "dependencyDashboard": false,
   "dependencyDashboardAutoclose": false,
}
